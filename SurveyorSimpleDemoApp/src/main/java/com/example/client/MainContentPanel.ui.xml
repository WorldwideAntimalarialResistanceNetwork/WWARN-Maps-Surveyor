<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:filter="urn:import:org.wwarn.surveyor.client.mvp.view.filter">
    <ui:style>
        .mainAppWidget {

        }

        .rows {
            width: 100%;
        }

        .columnSet {
            width: 100%;
        }

        .horizontalPanelAlignment {
            float: left;
        }

        .yearRangeSliderComposite {
            min-width: 500px;
            width: 50%;
        }

        .rightColumn {
            padding-left: 8px;
            width: 100%;
            font-size: 1.1em !important;
        }

        .logoPanel {
            float: right;
        }

        .countryTable {
            margin-top: 1.5em;
            margin-bottom: 1.5em;
        }
    </ui:style>

    <g:VerticalPanel ui:field="mainAppWidget" addStyleNames="{style.mainAppWidget}" >
        <g:VerticalPanel ui:field="mainContent">
            <g:VerticalPanel ui:field="rows">
                <g:HorizontalPanel ui:field="columnSet">
                    <g:VerticalPanel ui:field="leftColumn">
                        <g:HTMLPanel ui:field="selectorPanel">
                            <g:VerticalPanel ui:field="filterContainerPanel"/>
                        </g:HTMLPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel ui:field="rightColumn" addStyleNames="{style.rightColumn}">
                        <g:VerticalPanel ui:field="resultsContainerPanel"/>
                        <g:FlowPanel>
                            <filter:YearRangeSliderComposite addStyleNames="{style.horizontalPanelAlignment} {style.yearRangeSliderComposite}" width="50%" fieldName="PY" dateFormat="yyyy"/>
                            <g:FlowPanel addStyleNames="{style.horizontalPanelAlignment}" width="40%" height="100%">
                                <g:HTMLPanel>
                                    <p>
                                        Demonstrator application loaded with a subset of anti malarial quality data
                                    </p>
                                </g:HTMLPanel>
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:VerticalPanel>
    </g:VerticalPanel>


</ui:UiBinder>