             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:filter="urn:import:org.wwarn.surveyor.client.mvp.view.filter" xmlns:widget="urn:import:org.wwarn.surveyor.client.mvp.view.widgets">
    <ui:style>
        .filterContainerPanel {
            /*float: none;*/
            width: 215px;
            /*margin-left: -5px;*/
